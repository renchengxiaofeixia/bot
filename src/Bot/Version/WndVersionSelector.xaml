<b:EtWindow
	x:Class="Bot.Version.WndVersionSelector" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:Bot.AssistWindow.NotifyIcon.MenuCreator" 
    xmlns:b="clr-namespace:Bot.Common.Windows"
	b:Title="选择千牛机器人版本"
	Height="300"
	Width="300">
    <Grid
		Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition
				Height="auto" />
            <RowDefinition />
            <RowDefinition
				Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock>请选择要使用的版本号：</TextBlock>
        <ListBox
			Name="lboxVersion"
			Grid.Row="1" />
        <StackPanel
			Grid.Row="2"
			Margin="0 15 0 0"
			Orientation="Horizontal"
			Grid.ColumnSpan="3"
			HorizontalAlignment="Right">
            <Button
				Grid.Column="1"
				Margin="0 0 10 0"
				Click="btnClose_Click">取消(_N)</Button>
            <Button
				Click="btnOk_Click">确定(_Y)</Button>
        </StackPanel>
    </Grid>
</b:EtWindow>
